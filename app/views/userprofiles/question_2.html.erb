<%= render "shared/navbar-top-default" %>
<main class="content-middle">

  <div class="content-question">
      <h2 class="page-title-fromagator"><strong>FROMAGATOR</strong></h2>

        <div class="sliders">
          <p class="question-fromagator">Sur une échelle de 1 à 10, à quel point aimes-tu les fromages au <strong> lait de chèvre </strong> ? </p>
          <%= form_with(url: question_3_path, method: :get) do |f| %>
          <%= f.range_field :score_search_chevre, in: 0..10, step:"1", value: @user.score_search_chevre, oninput: "output.value = score_search_chevre.value" %>
          <div class="output-and-submit">
            <div class="score">
              <p> Ton choix :  </p>
              <output id="output"><%= @user.score_search_chevre%></output>
            </div>
            <%= f.submit "Valider", id: "fromagator_submit_button" %>
          </div>
        <% end %>
  </div>

  </div>

</main>
<%= render "shared/navbar-bottom-default" %>
