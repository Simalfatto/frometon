<%= render "shared/navbar-top-default" %>
<main class="content-middle">
  <h2>la roulette</h2>

  <div class="d-flex">
    <%= button_to 'Lancer la roulette', result_path, method: "get" %>
    <button class="btn btn-primary">Personnaliser la recherche</button>
  </div>

  <p>Le bouton pour déplier les paramètres de recherche</p>
  <%= form_tag(result_path, method: :get) do %>
    <%= check_box_tag :vache , class: :"form-check-input" %>
    <%= label_tag :"lait de brebis" %>
    <%= check_box_tag :brebis %>
    <%= label_tag :"lait de chèvre" %>
    <%= check_box_tag :chèvre %>
    <%= label_tag :"AOP" %>
    <%= check_box_tag :AOP %>
    <%= label_tag :"pour femme enceinte" %>
    <%= check_box_tag :"enceinte" %>
    <%= submit_tag %>
<% end %>

</main>
<%= render "shared/navbar-bottom-default" %>
