<main class="content-middle">

<h2 class="devise-title">Je me connecte Ã  mon compte <strong> Frometon </strong></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs-login">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: "Mon email",
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                label: "Mon mot de passe",
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label:"Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions-login">
    <%= f.button :submit, "Connexion" %>
  </div>
<% end %>

  <%= render "devise/shared/links", style: "text-decoration:none;" %>

</main>
