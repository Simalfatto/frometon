<%= render "shared/navbar-top-default" %>
<main class="content-middle">
  <%= link_to root_path, style: "text-decoration: none;" do  %>
    <%= image_tag("SVG/arrow.svg", width: '25px', id: "arrow") %>
  <% end %>
  <% if @cheeses != [] %>
    <div class="card-product">
      <% @cheeses.each do |cheese| %>
        <%= link_to cheese_path(cheese), class: "card-body-link", style: "text-decoration: none;" do %>
          <div class="card-body">
            <%= image_tag cheese.picture_url, class: "card-img-top"%>
            <h5 class="card-title">
              <%= cheese.name %></h5>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-center mb-5">Pas de fromage pour vos crit√®res de recherche...</p>
  <% end %>
</main>
<%= render "shared/navbar-bottom-default" %>
